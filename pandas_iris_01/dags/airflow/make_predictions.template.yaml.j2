apiVersion: v1
kind: Pod
metadata:
  labels:
    app.kubernetes.io/name: hackathon-pod-executor	
    app.kubernetes.io/version: v0.0.1
    app.kubernetes.io/component: lego-team	
  name: {{task_instance.task_id}}-{{ macros.time.time() }}
  namespace: default
spec:
  containers:
  - env:
    - name: MY_NODE_NAME
      valueFrom:
        fieldRef:
          apiVersion: v1
          fieldPath: spec.nodeName
    - name: MY_POD_NAME
      valueFrom:
        fieldRef:
          apiVersion: v1
          fieldPath: metadata.name
    - name: MY_POD_NAMESPACE
      valueFrom:
        fieldRef:
          apiVersion: v1
          fieldPath: metadata.namespace
    - name: MY_POD_IP
      valueFrom:
        fieldRef:
          apiVersion: v1
          fieldPath: status.podIP
    image: {{ run_config.spec.image }}
    command:
    - kedro
    args:
    - run 
    - -n
    - make_predictions
    - --from-inputs
    - X_train,X_test,y_train
    imagePullPolicy: IfNotPresent
    name: "test1"
    resources:
      limits:
        cpu: 1 
        memory: 1G
      requests:
        cpu: 1
        memory: 1G
    volumeMounts:
    - mountPath: /home/kedro/conf/base
      name: config
  restartPolicy: OnFailure
  volumes:
    - configMap:
        defaultMode: 420
        name: hackathon-catalog